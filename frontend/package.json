{
  "name": "nuclear-ao3-frontend",
  "version": "0.1.0",
  "description": "Accessibility-first Next.js frontend for Nuclear AO3 - Modern fanfiction platform with WCAG 2.1 AA compliance",
  "keywords": [
    "accessibility",
    "wcag",
    "fanfiction",
    "a11y",
    "next.js",
    "react",
    "screen-reader",
    "keyboard-navigation"
  ],
  "private": true,
  "scripts": {
    "css:build": "tailwindcss -i ./src/app/globals.css -o ./public/styles.css --watch",
    "css:build-prod": "tailwindcss -i ./src/app/globals.css -o ./public/styles.css --minify",
    "dev": "concurrently \"npm run css:build\" \"npx next dev -p 3001 -H 0.0.0.0\"",
    "build": "npm run css:build-prod && npx next build",
    "start": "npx next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:collections": "playwright test --config=playwright.config.integration.ts **/collections*.spec.ts",
    "test:e2e:collections:ui": "playwright test --config=playwright.config.integration.ts --ui **/collections*.spec.ts",
    "test:e2e:integration": "playwright test --config=playwright.config.integration.ts",
    "test:collections": "jest --testNamePattern='Collections'",
    "test:collections:watch": "jest --testNamePattern='Collections' --watch",
    "test:accessibility": "jest --testNamePattern='Accessibility|a11y' --coverage",
    "test:accessibility:watch": "jest --testNamePattern='Accessibility|a11y' --watch",
    "test:tag-enhancement": "playwright test --config=playwright.tag-enhancement.config.ts",
    "test:tag-enhancement:ui": "playwright test --config=playwright.tag-enhancement.config.ts --ui",
    "test:tag-enhancement:headed": "HEADLESS=false playwright test --config=playwright.tag-enhancement.config.ts",
    "test:subscription": "playwright test --config=playwright.subscription.config.ts",
    "test:subscription:ui": "playwright test --config=playwright.subscription.config.ts --ui",
    "test:subscription:headed": "playwright test --config=playwright.subscription.config.ts --headed",
    "test:tag-spam": "playwright test e2e/tag-spam-prevention.spec.ts",
    "test:tag-prominence": "playwright test e2e/enhanced-tag-prominence.spec.ts",
    "test:offline-consent": "playwright test e2e/offline-reading-consent.spec.ts",
    "test:offline-consent:ui": "playwright test e2e/offline-reading-consent.spec.ts --ui",
    "test:production": "playwright test --ignore-patterns='**/demo*.spec.ts'",
    "update-attributions": "node scripts/update-attributions.js",
    "clean:demos": "rm -rf src/app/demos",
    "prebuild": "npm run clean:demos && npm run update-attributions"
  },
  "dependencies": {
    "@apollo/client": "^3.11.8",
    "@axe-core/playwright": "^4.10.2",
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tiptap/extension-link": "^3.7.0",
    "@tiptap/extension-placeholder": "^3.7.0",
    "@tiptap/react": "^3.7.0",
    "@tiptap/starter-kit": "^3.7.0",
    "axios": "^1.12.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "graphql": "^16.11.0",
    "lodash.debounce": "^4.0.8",
    "lucide-react": "^0.544.0",
    "next": "^15.5.4",
    "postcss-load-config": "^6.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swr": "^2.3.6",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.19.18",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.18",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.14",
    "typescript": "^5"
  }
}
