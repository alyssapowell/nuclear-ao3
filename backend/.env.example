# =============================================================================
# NUCLEAR AO3 - ENVIRONMENT CONFIGURATION
# =============================================================================

# Application Environment
GO_ENV=development
GIN_MODE=debug

# Gateway Configuration
GATEWAY_PORT=8080

# CORS Configuration
CORS_ALLOW_ALL=false
CORS_WILDCARD=false
FRONTEND_URL=https://your-production-frontend.com
ADMIN_URL=https://admin.your-domain.com

# For public API access (enables other platforms to use your API)
# CORS_WILDCARD=true

# Deployment Platform URLs (auto-detected)
VERCEL_URL=
NETLIFY_URL=
HEROKU_URL=

# Service Ports
AUTH_SERVICE_PORT=8081
WORK_SERVICE_PORT=8082
TAG_SERVICE_PORT=8083
SEARCH_SERVICE_PORT=8084

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ao3_nuclear
POSTGRES_USER=ao3_user
POSTGRES_PASSWORD=ao3_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
API_RATE_LIMIT=1000
CORS_MAX_AGE=86400

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=info